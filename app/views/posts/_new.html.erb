<h2 class="mt-3">New post</h2>
<%= form_with model: post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit 'Post', class: "btn btn-success" %>
  </div>
<% end %>